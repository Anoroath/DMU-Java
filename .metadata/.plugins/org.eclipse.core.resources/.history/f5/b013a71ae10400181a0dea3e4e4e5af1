package opgave2;

public class Opgave2 {

    public static void main(String[] args) {
        System.out.println(power(2, 3));
    }

    public static int power(int n, int p) {
        int result = 0;
        if (p == 0) {
            result = 1;
        } else {
            result = (int) Math.pow(n, p - 1) * n;
        }

        return result;
    }

}
