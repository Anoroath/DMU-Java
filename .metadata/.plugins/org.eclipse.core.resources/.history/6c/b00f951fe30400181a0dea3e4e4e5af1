package opgave3;

public class Opgave3 {

    public static void main(String[] args) {
        System.out.println(prod(2, 4));
    }

    public static int prod(int a, int b) {
        int result = 0;
        if(a == 1) {
            result = b;
        } else if (a == 0) {
            result = 0;
        } else {
            result = prod(a-1, b) + b;
        }
        return result;
    }
}
